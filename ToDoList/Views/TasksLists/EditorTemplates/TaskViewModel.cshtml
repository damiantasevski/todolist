@model TaskViewModel

<div class="task-item mb-4 d-flex flex-column align-items-start justify-content-between border p-3 rounded shadow-sm">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3 w-100">
        <label asp-for="Name" class="form-label">Task Name</label>
        <input asp-for="Name" class="form-control bg-light" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 w-100">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control bg-light" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3 d-flex align-items-center w-100">
        <label asp-for="IsDone" class="form-label mr-4">Is Done</label>
        <div class="form-check form-check-lg">
            <input asp-for="IsDone" type="checkbox" class="form-check-input" />
        </div>
    </div>
    <div class="d-flex align-items-center mt-3 w-100">
        <a class="btn btn-outline-danger btn-sm" onclick="removeTask('@Model.Id')">
            <i class="bi bi-trash"></i> Delete
        </a>
    </div>
</div>