@model ToDoList.Models.TasksListViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">Delete Task List</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm p-4 mb-4 bg-light rounded">
            <div class="card-body">
                <h3 class="mb-4">Are you sure you want to delete this?</h3>
                <div class="form-group mb-4">
                    <label class="control-label">List Name</label>
                    <input type="text" class="form-control" value="@Model.Name" readonly />
                </div>
                <div class="form-group mb-4">
                    <label class="control-label">Date</label>
                    <input type="text" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" readonly />
                </div>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-danger w-48" onclick="return confirm('Are you sure you want to delete this?')">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary w-48">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
