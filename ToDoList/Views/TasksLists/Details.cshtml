@model ToDoList.Models.TasksListViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4">Task List Details</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm p-4 mb-4 bg-light rounded">
            <div class="card-body">
                <div class="form-group mb-4">
                    <label class="control-label">List Name</label>
                    <input type="text" class="form-control" value="@Model.Name" readonly />
                </div>
                <div class="form-group mb-4">
                    <label class="control-label">Date</label>
                    <input type="text" class="form-control" value="@Model.Date.ToString("yyyy-MM-dd")" readonly />
                </div>
            </div>
        </div>

        <div class="card shadow-sm p-4 mb-4 bg-light rounded">
            <div class="card-body">
                <h4 class="mb-4">Tasks</h4>
                @foreach (var task in Model.Tasks)
                {
                    @Html.Partial("TaskViewModel", task)
                }
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
