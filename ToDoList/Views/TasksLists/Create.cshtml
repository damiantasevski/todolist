@model ToDoList.Models.TasksListViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mb-4">Create Tasks List</h1>

<h4>Tasks List</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" id="form" class="shadow p-4 bg-light rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">List Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter task list name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Select Date</label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <h4 class="mt-4">Tasks</h4>
            <div id="tasks-container" class="mb-4">

            </div>
            <button type="button" id="add-task" onclick="addTask()" class="btn btn-outline-secondary">
                <i class="bi bi-plus-circle"></i> Add Task
            </button>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/task.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
